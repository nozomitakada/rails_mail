        </div>
      </section>
      <section>
        <h2>My Blog</h2>
        <ul>
          <% if logged_in? %>
          <li><%= link_to 'Top' ,'/tops' %></li>
          <li><%= link_to 'Blog all' ,'/blogs' %></li>
          <li><%= link_to 'New Blog' ,'/blogs/new' %></li>
          <% else %>
          <li><%= link_to 'Top' ,new_user_path %></li>
          <li><%= link_to 'Blog all' ,new_user_path %></li>
          <li><%= link_to 'New Blog' ,new_user_path %></li>
          <% end %>
        </ul>
      </section>
    </aside>
